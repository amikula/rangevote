<h1>New poll</h1>

<%= error_messages_for :poll %>

<% form_for(@poll) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Instructions</b><br />
    <%= f.text_area :instructions %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', polls_path %>
