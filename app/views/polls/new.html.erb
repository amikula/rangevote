<h1>New poll</h1>

<%= error_messages_for :poll %>

<% form_for(@poll) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Instructions</b><br />
    <%= f.text_area :instructions %>
  </p>

  <p>
    <b>Candidates</b><br>
    <% (0..9).each do |i| %>
      <%= text_field_tag "candidate#{i}", nil, :style => "margin-top:0.5em;" %><br>
    <% end %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', polls_path %>
